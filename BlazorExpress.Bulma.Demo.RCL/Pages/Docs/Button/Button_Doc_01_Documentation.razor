@attribute [Route(pageUrl)]
@layout DocsMainLayout

<PageMetaTags PageUrl="@pageUrl" Title="@metaTitle" Description="@metaDescription" ImageUrl="@imageUrl" />

<PageHero Title="@pageTitle">
    <SubTitleTemplate>
        @((MarkupString)pageDescription)
    </SubTitleTemplate>
</PageHero>

@* <img src="https://i.imgur.com/IX3bajc.png" class="img-fluid" alt="Blazor Bar Chart - API Documentation" /> *@

<DemoLink Href="@RouteConstants.Demos_Button_Documentation" />

<Section Class="p-0" Size="HeadingSize.H4" Name="Button Parameters" PageUrl="@pageUrl" Link="button-parameters">
    <DocxTable TItem="Button" DocType="DocType.Parameters" />
</Section>

<Section Class="p-0" Size="HeadingSize.H4" Name="Buttons Parameters" PageUrl="@pageUrl" Link="buttons-parameters">
    <DocxTable TItem="Buttons" DocType="DocType.Parameters" />
</Section>

@code {
    private const string pageUrl = RouteConstants.Docs_Button_Documentation;
    private const string pageTitle = "Button";
    private const string pageDescription = "This documentation provides a comprehensive reference for the <code>Button</code> component, guiding you through its configuration options.";
    private const string metaTitle = "Blazor Button Component";
    private const string metaDescription = "This documentation provides a comprehensive reference for the Button component, guiding you through its configuration options.";
    private const string imageUrl = "https://i.imgur.com/FGgEMp6.jpg"; // TODO: update
}
