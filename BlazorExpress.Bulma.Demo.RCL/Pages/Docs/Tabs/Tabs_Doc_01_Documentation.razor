@attribute [Route(pageUrl)]
@layout DocsMainLayout

<PageMetaTags PageUrl="@pageUrl" Title="@metaTitle" Description="@metaDescription" ImageUrl="@imageUrl" />

<PageHero Title="@pageTitle">
    <SubTitleTemplate>
        @((MarkupString)pageDescription)
    </SubTitleTemplate>
</PageHero>

@* <img src="https://i.imgur.com/IX3bajc.png" class="img-fluid" alt="Blazor Bar Chart - API Documentation" /> *@

<DemoLink Href="@RouteConstants.Demos_Tabs_Documentation" />

<Section Class="p-0" Size="HeadingSize.H4" Name="Tabs Parameters" PageUrl="@pageUrl" Link="tabs-parameters">
    <DocxTable TItem="Tabs" DocType="DocType.Parameters" />
</Section>

<Section Class="p-0" Size="HeadingSize.H4" Name="Tab Parameters" PageUrl="@pageUrl" Link="tab-parameters">
    <DocxTable TItem="Tab" DocType="DocType.Parameters" />
</Section>

@code {
    private const string pageUrl = RouteConstants.Docs_Tabs_Documentation;
    private const string pageTitle = "Tabs";
    private const string pageDescription = "This documentation provides a comprehensive reference for the <code>Tabs</code> component, guiding you through its configuration options.";
    private const string metaTitle = "Blazor Tabs Component";
    private const string metaDescription = "This documentation provides a comprehensive reference for the Tabs component, guiding you through its configuration options.";
    private const string imageUrl = "https://i.imgur.com/FGgEMp6.jpg"; // TODO: update
}
