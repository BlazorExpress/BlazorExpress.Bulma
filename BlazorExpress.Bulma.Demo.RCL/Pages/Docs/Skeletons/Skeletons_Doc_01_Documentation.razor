@attribute [Route(pageUrl)]
@layout DocsMainLayout

<PageMetaTags PageUrl="@pageUrl" Title="@metaTitle" Description="@metaDescription" ImageUrl="@imageUrl" />

<PageHero Title="@pageTitle">
    <SubTitleTemplate>
        @((MarkupString)pageDescription)
    </SubTitleTemplate>
</PageHero>

@* <img src="https://i.imgur.com/IX3bajc.png" class="img-fluid" alt="Blazor Bar Chart - API Documentation" /> *@

<DemoLink Href="@RouteConstants.Demos_Skeletons_Documentation" />

<Section Class="p-0" Size="HeadingSize.H4" Name="Skeleton Parameters" PageUrl="@pageUrl" Link="skeleton-parameters">
    <DocxTable TItem="Skeleton" DocType="DocType.Parameters" />
</Section>

<Section Class="p-0" Size="HeadingSize.H4" Name="SkeletonLine Parameters" PageUrl="@pageUrl" Link="skeleton-line-parameters">
    <DocxTable TItem="SkeletonLine" DocType="DocType.Parameters" />
</Section>

@code {
    private const string pageUrl = RouteConstants.Docs_Skeletons_Documentation;
    private const string pageTitle = "Skeleton";
    private const string pageDescription = "This documentation provides a comprehensive reference for the <code>Skeleton</code> component, guiding you through its configuration options.";
    private const string metaTitle = "Blazor Skeleton Component";
    private const string metaDescription = "This documentation provides a comprehensive reference for the Skeleton component, guiding you through its configuration options.";
    private const string imageUrl = "https://i.imgur.com/FGgEMp6.jpg"; // TODO: update
}
