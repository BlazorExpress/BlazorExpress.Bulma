@attribute [Route(pageUrl)]
@layout DocsMainLayout

<PageMetaTags PageUrl="@pageUrl" Title="@metaTitle" Description="@metaDescription" ImageUrl="@imageUrl" />

<PageHero Title="@pageTitle">
    <SubTitleTemplate>
        @((MarkupString)pageDescription)
    </SubTitleTemplate>
</PageHero>

@* <img src="https://i.imgur.com/IX3bajc.png" class="img-fluid" alt="Blazor Bar Chart - API Documentation" /> *@

<DemoLink Href="@DemoRouteConstants.Demos_Pagination_Documentation" />

<Section Class="p-0" Size="HeadingSize.H4" Name="Pagination Parameters" PageUrl="@pageUrl" Link="pagination-parameters">
    <DocxTable TItem="Pagination" DocType="DocType.Parameters" />
</Section>

<Section Class="p-0" Size="HeadingSize.H4" Name="Pagination Events" PageUrl="@pageUrl" Link="pagination-events">
    <DocxTable TItem="Pagination" DocType="DocType.Events" />
</Section>

<Section Class="p-0" Size="HeadingSize.H4" Name="PaginationItem Parameters" PageUrl="@pageUrl" Link="pagination-item-parameters">
    <DocxTable TItem="PaginationItem" DocType="DocType.Parameters" />
</Section>

@code {
    private const string componentName = nameof(Pagination);
    private const string pageUrl = DemoRouteConstants.Docs_Pagination_Documentation;
    private const string pageTitle = componentName;
    private const string pageDescription = $"This documentation provides a comprehensive reference for the <code>{componentName}</code> component, guiding you through its configuration options.";
    private const string metaTitle = $"Blazor {componentName} Component";
    private const string metaDescription = $"This documentation provides a comprehensive reference for the {componentName} component, guiding you through its configuration options.";
    private const string imageUrl = DemoScreenshotSrcConstants.Pagination;
}
