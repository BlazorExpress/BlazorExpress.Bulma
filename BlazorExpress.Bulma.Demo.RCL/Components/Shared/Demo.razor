@namespace BlazorExpress.Bulma.Demo.RCL
@inherits BulmaComponentBase

<div @ref="@Element"
     id="@Id"
     class="@CssClassNames"
     style="@CssStyleNames"
     @attributes="@AdditionalAttributes">

    <div class="be-example-demo">
        <DynamicComponent Type="this.Type" />
    </div>
    <div class="be-example-toolbar is-flex is-justify-content-space-between">
        <div class="pl-4 py-2">@LanguageCode.ToLanguageName()?.ToUpperInvariant()</div>
        <div class="pr-4 py-2"><i class="@clipboardTooltipIconName" role="button" @onclick="CopyToClipboardAsync"></i></div>
    </div>
    <div class="be-example-snippet">
        @if (codeSnippetWidth > 0)
        {
            <pre style="@($"width:{codeSnippetWidth}px;")">
            <code class="@LanguageCode.ToLanguageCssClass()">
                    @if (codeSnippet is not null)
                    {
                        <text>@codeSnippet</text>
                    }
                </code>
            </pre>
        }
    </div>
</div>
