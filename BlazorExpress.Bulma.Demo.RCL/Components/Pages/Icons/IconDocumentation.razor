@attribute [Route(pageUrl)]

<PageMetaTags PageUrl="@pageUrl" Title="@metaTitle" Description="@metaDescription" ImageUrl="@imageUrl" />

<PageHero Title="@pageTitle">
    <SubTitleTemplate>
        @((MarkupString)pageDescription)
    </SubTitleTemplate>
</PageHero>

<Section Class="p-0" Size="HeadingSize.H3" Name="Example" PageUrl="@pageUrl" Link="example">
    <Demo Type="typeof(Icon_Demo_01_How_it_works)" Tabs="true" />
</Section>

<Section Class="p-0" Size="HeadingSize.H3" Name="Icon text" PageUrl="@pageUrl" Link="icon-text">
    <Demo Type="typeof(Icon_Demo_02_Icon_Text)" Tabs="true" />
</Section>

@code{
    private const string pageUrl = RouteConstants.Demos_Icon_Documentation;
    private const string pageTitle = "Icon";
    private const string pageDescription = "The <code>Icon</code> component will display an icon from any icon font.";
    private const string metaTitle = "Blazor Icon Component";
    private const string metaDescription = "The Icon component will display an icon from any icon font.";
    private const string imageUrl = "https://i.imgur.com/FGgEMp6.jpg"; // TODO: update
}
