@namespace BlazorExpress.Bulma
@inherits BulmaComponentBase

<div class="@ClassNames" style="@StyleNames">

    <nav class="level">

        <div class="level-left">
            <div class="level-item">
                <BootstrapIcon Name="BootstrapIconName.ChevronUp" Size="BootstrapIconSize.Medium" @onclick="PreviousPageAsync" title="Previous Page" />
                <BootstrapIcon Name="BootstrapIconName.ChevronDown" Size="BootstrapIconSize.Medium" @onclick="NextPageAsync" title="Next Page" />
            </div>
            <div class="level-item">
                <input class="input is-small" style="width:60px;" type="number" @bind-value="pageNumber" placeholder="Enter page number" />
                <div class="pl-2">of @pagesCount</div>
            </div>
        </div>

        <p class="level-item">
            <BootstrapIcon Name="BootstrapIconName.Dash" Size="BootstrapIconSize.Medium" @onclick="ZoomOutAsync" title="Zoom Out" />
            <span class="px-3"><strong>@zoomPercentage</strong></span>
            <BootstrapIcon Name="BootstrapIconName.Plus" Size="BootstrapIconSize.Medium" @onclick="ZoomInAsync" title="Zoom In" />
        </p>

        <div class="level-right">
            <div class="navbar-item has-dropdown is-hoverable is-right">
                <a class="navbar-link">Tools</a>

                <div class="navbar-dropdown">
                    <a class="navbar-item px-2" @onclick="RotateClockwiseAsync"><BootstrapIcon Name="BootstrapIconName.ArrowClockwise" /> Rotate Clockwise</a>
                    <a class="navbar-item px-2" @onclick="RotateCounterclockwiseAsync"><BootstrapIcon Name="BootstrapIconName.ArrowCounterclockwise" /> Rotate Counterclockwise</a>
                    <a class="navbar-item px-2" @onclick="SwitchOrientationAsync"><BootstrapIcon Name="BootstrapIconName.Compass" /> Switch Orientation</a>
                    <a class="navbar-item px-2" @onclick="FirstPageAsync"><BootstrapIcon Name="BootstrapIconName.ChevronBarUp" /> Go to First Page</a>
                    <a class="navbar-item px-2" @onclick="LastPageAsync"><BootstrapIcon Name="BootstrapIconName.ChevronBarDown" /> Go to Last Page</a>
                    <a class="navbar-item px-2" @onclick="ResetZoomAsync"><BootstrapIcon Name="BootstrapIconName.PlusSlashMinus" /> Reset Zoom</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="has-background-white-ter has-text-centered py-3" style="overflow-x: auto;">
        <canvas @ref="@Element" id="@Id" @attributes="@AdditionalAttributes">
        </canvas>
    </div>
</div>