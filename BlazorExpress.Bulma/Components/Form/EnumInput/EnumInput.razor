@namespace BlazorExpress.Bulma
@inherits BulmaComponentBase
@typeparam TEnum

<div class="@ContainerClassNames" style="@ContainerStyleNames">
    <select @ref="@Element"
            id="@Id"
            class="@ClassNames @FieldCssClasses"
            style="@StyleNames"
            @attributes="@AdditionalAttributes"
            @onchange="OnChange">

        @if (items is not null)
        {
            foreach (var item in items)
            {
                <option value="@item.Value" selected="@(item.Value.Equals(Value) || item.Text.Equals(Text))">
                    @item.Text
                </option>
            }
        }
    </select>
</div>